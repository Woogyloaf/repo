// ***********************************
// BANNER
// ***********************************
@import url("https://fonts.googleapis.com/css?family=Open+Sans:400,700")
body
  margin 0
  padding 0
  font-family 'Open Sans', sans-serif

.myad
  margin 0 auto
  border 1px solid #ccc
  box-sizing border-box
  color inherit
  width 300px
  height 250px
  display inline-block
  position relative
  overflow hidden
  background-color #fff
  opacity 0
  .myad-img
    background url(../images/graphics.png) no-repeat 0px 0px
  .back
    width 300px
    height 250px
    background-position 0 0
  .myad_logo
    width inherit
    height 55px
    background-position 0px -658px
    top 195px
    left 0px

*
  user-drag none
  -moz-user-select none
  -webkit-user-drag none

div
  position absolute

html
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.invbtn
  width 300px
  height 250px
  cursor pointer

.cta
  top 210px
  display inline-block
  width 117px
  height 22px
  background #d92330
  border-radius 4px
  right 21px
  cursor pointer
  #copy
    color #fff
    text-transform uppercase
    font-size .6em
    line-height 22px
    text-align center
    font-weight 700
    position relative

.shine
  position absolute
  top 0
  left 0
  background rgba(255,255,255,0)
  background-repeat no-repeat
  background -webkit-gradient(linear, left top, right bottom, color-stop(22%, rgba(255,255,255,0)), color-stop(25%, rgba(255,255,255,.5)), color-stop(49%, rgba(255,255,255,0)))
  background linear-gradient(135deg, rgba(255,255,255,0) 22%, rgba(255,255,255,.5) 49%, rgba(255,255,255,0) 76%)
  // filter progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#ffffff', GradientType=1 )
  background-repeat no-repeat
  border-radius 4px

.shine
  width 117px
  height 22px
  background-size 116px 25px
  background-position -78px 0

